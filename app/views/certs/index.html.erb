<% content_for :head do %>
  <h1>OpenVPN-Zertifikate</h1>
<% end %>

<h2>Erzeugte Zertifikate</h2>
<table>
  <tr>
	<th>id</th>
	<th>Serial</th>
    <th>wlan-mac</th>
    <th>bat0-mac</th>
	<th>Fingerprint - MD5(.der) </th>
	<th>Erzeugt am</th>
  	<th>Revoke</th>
</tr>

<% @certs.each do |cert| %>
  <tr class="<%= cycle('odd','even') %>   <%='revoked' if cert.revoked %> ">
    <td class="monospaced">
		<%= link_to "#{cert.id}.pem",cert_path(cert, :format => "pem") %>
		(<%= link_to ".txt",cert_path(cert, :format => "txt") %>)
	
	</td>
    <td class="monospaced"><%= "#{cert.serial}" %></td>
	<td class="monospaced"><%= cert.node.wlan_mac %></td>
    <td class="monospaced"><%= cert.node.bat0_mac %></td>
	<td class="monospaced"><%= "#{cert.fingerprint}".scan(/.{1,4}/).join(':') %></td>
  	<td><%= cert.created_at%></td>
	<td class="centered"><%= link_to  image_tag("bin.png"),revoke_cert_path(cert), {:confirm => "Rufe Zertifikat #{cert.id} zurÃ¼ck.",:method => :post} unless cert.revoked %> </td>

  </tr>
<% end %>
</table>
<br />
