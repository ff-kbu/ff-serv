<%- if controller_name != 'sessions' %>
  <%= link_to "Anmelden", new_session_path(resource_name) %> |
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Account erstellen", new_user_registration_path %> |
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "Kennwort vergessen", new_password_path(resource_name) %> | 
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "E-Mail bestÃ¤tigen", new_confirmation_path(resource_name) %> |
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Account entsperren.", new_unlock_path(resource_name) %> |
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Anmelden mit #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %> |
  <% end -%>
<% end -%>