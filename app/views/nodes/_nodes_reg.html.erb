<tr>
	<td class="vpn_status<%= nodes_reg.status.vpn_status %>">
		<span class="node_reg_key">Node-Name:</span>
		<span class="node_reg_value"><%= nodes_reg.node_registration.name %></span> - 
		<span class="node_reg_key">MAC:</span>
		<span class="node_reg_value monospaced"><%= nodes_reg.mac %></span> <br />
		<span class="node_reg_key">VPN-Status:</span>
		<span class="node_reg_value monospaced vpn_status<%= nodes_reg.status.vpn_status %>">
			<%= nodes_reg.status.vpn_status %></span> - 
		<span class="node_reg_key"> Letzte Ã„nderung: </span>
		<span class="node_reg_last_change_value"> 
			<%= I18n.l nodes_reg.status.created_at, :format => :short%> Uhr
		</span><br />
		<span class="node_reg_key">Kontakt:</span>
		<span class="node_reg_value">
			<%= nodes_reg.node_registration.operator_name %> 
			(<%= link_to mail_to(
				nodes_reg.node_registration.operator_email,
				nodes_reg.node_registration.operator_email, 
				:subject => "Freifunk-KBU-Node #{nodes_reg.mac}")%>)
		</span> <br />

		<span class="node_reg_key">Standort:</span>
		<span class="node_reg_value"> 
			<%= nodes_reg.node_registration.loc_str[0,40] %><%= '...' if nodes_reg.node_registration.loc_str.size > 40%>
		</span></br>
		<% if nodes_reg.status.fw_version.present?%>
			<span class="node_reg_key">Fimrware-Version:</span>
			<span class="node_reg_value"><%= nodes_reg.status.fw_version %></span><br />
		<% end %>
		
<% if nodes_reg.node_registration.notice.present?%>
		<span class="node_reg_key">Hinweis:</span>
		<span class="node_reg_value">
			<%= text_area_tag(:notice, nodes_reg.node_registration.notice, 
				:rows => 20, :cols => 5, 
				{:readonly => "readonly", :style => "border:none" })%>
<% end %>
		</span> <br />
		<%= link_to 'Registrierung', edit_node_registration_path(nodes_reg.node_registration) %> |
		<%= link_to 'Status-Historie', node_statuses_path(:node => nodes_reg) %>
		<% if permitted_to? :register, nodes_reg %>
			| <%= link_to 'Tinc-Keys', tincs_path(:n => nodes_reg.id) %>
		<% end %>
	</td>
	<td>
		<div class="node_map" lat="<%= nodes_reg.node_registration.latitude %>" lng="<%= nodes_reg.node_registration.longitude %>" style="height: 140px; width: 400px;">	
	</td>

</tr>