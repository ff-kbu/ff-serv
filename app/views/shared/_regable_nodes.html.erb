<table  cellspacing="0" cellpadding="3">
<tr>
	<th>Node-ID (MAC)</th>
	<th>Firmware-Version</th>
	<th>Config-Version</th>
	<th>Online am</th>
	<th> &nbsp; </th>
</tr>
	<% for node in regable_nodes %>
	<tr class="<%= cycle('odd','even')%>">
		<td class="monospaced"><%= link_to node.mac,new_node_registration_path(:node => node)  %></td>
		<td class="monospaced"><%= node.status.fw_version%></td>
		<td class="monospaced"><%= node.status.initial_conf_version%></td>
		<td><%= I18n.l node.status.created_at, :format => :short%></td>
		<td><%= link_to icon_tag('map_add','Registrieren'), new_node_registration_path(:node => node) if node.permitted_to?(:register)%>

	</tr>
	<% end %>
</table>